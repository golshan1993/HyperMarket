<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@color/digikala_white_pure"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/product_list_standard_margin"
    android:paddingRight="@dimen/product_list_standard_margin">

    <CheckBox
        android:id="@+id/term_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/product_list_standard_margin"
        android:layout_marginRight="@dimen/product_list_standard_margin"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:gravity="left|center" />

    <TextView
        android:id="@+id/term_title_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/product_list_standard_margin"
        android:layout_marginRight="@dimen/product_list_standard_margin"
        android:layout_toRightOf="@id/term_checkbox"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="2"
        android:textColor="@color/digikala_black_light"
        android:textSize="14.0sp" />
</RelativeLayout>
